+		fdEntry->currentCluster = nextCluster;
+	}
+	if ((error = fmsReadSector(buff, C_2_S(fdEntry->currentCluster))))
+		return error;
+
+	memcpy(fdEntry->buffer, buff, (index % BYTES_PER_SECTOR));
+		
+	return index;
 }
 
